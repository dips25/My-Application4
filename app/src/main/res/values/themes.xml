<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAppication4" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyAppication4.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/littishpink</item>
        <item name="colorPrimaryVariant">@color/littishpink</item>

    </style>

    <style name="Theme.MyAppication4.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyAppication4.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySampleActivity" parent="Theme.AppCompat.Light.NoActionBar">
<!--        <item name="buttonStyle">@style/MyButton</item>-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:textStyle">@style/MyTextStyle</item>-->
        <item name="android:windowBackground">@color/teal_200</item>
    </style>


    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/pink</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>

<!--        <item name="android:layout_marginStart">150dp</item>-->
    </style>

    <style name="bioStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14dp</item>

        <!--        <item name="android:layout_marginStart">150dp</item>-->
    </style>

    <color name="litish_pink">#FFDBE9</color>
</resources>